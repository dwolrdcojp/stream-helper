# Preview Mode (set to true to test locally before going live)
PREVIEW_MODE=false
PREVIEW_PORT=8080
PREVIEW_DIR=./preview

# Twitch Configuration (not required in preview mode)
TWITCH_STREAM_KEY=your_stream_key_here
TWITCH_SERVER=rtmp://live.twitch.tv/app

# Video Settings
VIDEO_BITRATE=3000k
AUDIO_BITRATE=160k
RESOLUTION=1920x1080
FPS=30
PRESET=veryfast

# Hardware Acceleration (none, videotoolbox, vaapi)
# videotoolbox - macOS hardware encoding
# vaapi - Linux hardware encoding (requires compatible GPU)
# none - software encoding (slower but works everywhere)
HW_ACCEL=none

# Overlay Settings
OVERLAY_ENABLED=true
OVERLAY_FONT_SIZE=24
OVERLAY_POSITION=x=10:y=10
OVERLAY_COLOR=white
# OVERLAY_FONT=/path/to/font.ttf

# Playlist Settings
VIDEO_DIR=./videos
LOOP_PLAYLIST=true
SHUFFLE_PLAYLIST=false

# Monitoring Settings
HEALTH_CHECK_INTERVAL=30000
MAX_RETRIES=10
RETRY_BACKOFF_MS=5000

# Logging
LOG_DIR=./logs
LOG_LEVEL=info
